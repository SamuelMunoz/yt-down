<Window x:Class="YtDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Video Downloader" 
        Height="600" Width="800"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock Grid.Row="0" 
                   Text="YouTube Video Downloader" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Estado de yt-dlp -->
        <Border Grid.Row="1" 
                Background="#F0F0F0" 
                CornerRadius="4" 
                Padding="10" 
                Margin="0,0,0,15">
            <TextBlock x:Name="StatusTextBlock" 
                       Text="Verificando yt-dlp..." 
                       FontSize="12"/>
        </Border>

        <!-- URL Input -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="URL:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0" 
                       FontSize="14"/>
            <TextBox Grid.Column="1" 
                     x:Name="UrlTextBox" 
                     VerticalAlignment="Center"/>
            <Button Grid.Column="2" 
                    x:Name="PasteButton"
                    Content="Pegar" 
                    Click="PasteButton_Click"
                    Padding="15,8"
                    Background="#6c757d"/>
        </Grid>

        <!-- Formato -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Formato:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0" 
                       FontSize="14"/>
            <ComboBox Grid.Column="1" 
                      x:Name="FormatComboBox"/>
        </Grid>

        <!-- Carpeta de salida -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Guardar en:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0" 
                       FontSize="14"/>
            <TextBox Grid.Column="1" 
                     x:Name="OutputFolderTextBox" 
                     VerticalAlignment="Center"
                     Text=""/>
            <Button Grid.Column="2" 
                    x:Name="BrowseButton"
                    Content="Examinar..." 
                    Click="BrowseButton_Click"
                    Padding="15,8"
                    Background="#6c757d"/>
        </Grid>

        <!-- Botones -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,15">
            <Button x:Name="DownloadButton" 
                    Content="Descargar" 
                    Click="DownloadButton_Click"
                    Width="120"/>
            <Button x:Name="CancelButton" 
                    Content="Cancelar" 
                    Click="CancelButton_Click"
                    IsEnabled="False"
                    Width="120"
                    Background="#dc3545"/>
        </StackPanel>

        <!-- Progreso -->
        <Grid Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       x:Name="ProgressTextBlock" 
                       Text="Listo para descargar"
                       Margin="0,0,0,5"/>
            
            <ProgressBar Grid.Row="1" 
                         x:Name="ProgressBar" 
                         Height="25" 
                         Minimum="0" 
                         Maximum="100"
                         Margin="0,0,0,10"/>
            
            <Border Grid.Row="2" 
                    Background="#F8F8F8" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1"
                    CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox" 
                             IsReadOnly="True"
                             Background="Transparent"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="11"
                             TextWrapping="Wrap"
                             Padding="10"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
